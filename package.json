{
  "name": "nestjs-graphql-fastify-template",
  "version": "0.2.0",
  "description": "NestJS & Mercurius Monolith Back-End Template",
  "author": "Afonso Barracha",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test:watch": "yarn node --experimental-vm-modules $(yarn bin jest)  --watch",
    "test:cov": "yarn node --experimental-vm-modules $(yarn bin jest)  --coverage",
    "test:e2e": "yarn node --experimental-vm-modules $(yarn bin jest)  --config ./test/jest-e2e.json",
    "migrate:create": "npx mikro-orm schema:create --run",
    "migrate:update": "npx mikro-orm schema:update --run"
  },
  "dependencies": {
    "@apollo/utils.keyvadapter": "^2.0.0",
    "@aws-sdk/client-s3": "^3.204.0",
    "@aws-sdk/signature-v4-crt": "^3.201.0",
    "@keyv/redis": "^2.5.3",
    "@mikro-orm/core": "^5.5.2",
    "@mikro-orm/nestjs": "^5.1.2",
    "@mikro-orm/postgresql": "^5.5.2",
    "@nestjs/apollo": "^10.1.4",
    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/graphql": "^10.1.5",
    "@nestjs/platform-express": "^9.2.0",
    "@nestjs/throttler": "^4.0.0",
    "altair-express-middleware": "^5.0.4",
    "apollo-server-express": "^3.11.1",
    "apollo-server-plugin-response-cache": "^3.8.1",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.1.3",
    "cache-manager-ioredis-yet": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dataloader": "^2.1.0",
    "dayjs": "^1.11.6",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^16.0.2",
    "graphql-ws": "^5.11.2",
    "handlebars": "^4.7.7",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "keyv": "^4.5.2",
    "nestjs-throttler-storage-redis": "^0.3.0",
    "nodemailer": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.0.0",
    "rxjs": "^7.5.7",
    "sharp": "^0.31.2",
    "slugify": "^1.6.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@mikro-orm/cli": "^5.5.2",
    "@mikro-orm/sqlite": "^5.5.2",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^4.0.2",
    "@types/jest": "29.2.6",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/sharp": "^0.31.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-request": "^5.0.0",
    "jest": "^29.3.0",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "packageManager": "yarn@3.4.1"
}
